{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      // Legacy support (during migration)
      "@/*": ["src/*"],
      
      // Features (organized by function)
      "@/features/*": ["./features/*"],
      "@/features/reco/*": ["./features/reco/*"],
      "@/features/editor/*": ["./features/editor/*"],
      "@/features/intake/*": ["./features/intake/*"],
      "@/features/export/*": ["./features/export/*"],
      "@/features/library/*": ["./features/library/*"],
      
      // Shared code
      "@/shared/*": ["./shared/*"],
      "@/shared/components/*": ["./shared/components/*"],
      "@/shared/lib/*": ["./shared/lib/*"],
      "@/shared/types/*": ["./shared/types/*"],
      "@/shared/data/*": ["./shared/data/*"],
      
      // Database
      "@/database/*": ["./database/*"],
      
      // Scraper
      "@/scraper/*": ["./apps/scraper/src/*"]
    },
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true
  },
  "include": [
    "src",
    "pages",
    "components"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "legacy/_quarantine"
  ]
}
