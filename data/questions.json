{
  "version": "2025-09-20",
  "universal": [
    {
      "id": "q1_country",
      "label": "Where will your business operate?",
      "type": "single-select",
      "options": [
        {
          "value": "AT",
          "label": "Austria only"
        },
        {
          "value": "EU",
          "label": "EU (including Austria)"
        },
        {
          "value": "NON_EU",
          "label": "Outside EU"
        }
      ],
      "required": true
    },
    {
      "id": "q2_entity_stage",
      "label": "What stage is your business at?",
      "type": "single-select",
      "options": [
        {
          "value": "PRE_COMPANY",
          "label": "Just an idea or team forming"
        },
        {
          "value": "INC_LT_6M",
          "label": "Recently started (less than 6 months)"
        },
        {
          "value": "INC_6_36M",
          "label": "Early stage (6 months to 3 years)"
        },
        {
          "value": "INC_GT_36M",
          "label": "Established business (over 3 years)"
        },
        {
          "value": "RESEARCH_ORG",
          "label": "University or research institute"
        },
        {
          "value": "NONPROFIT",
          "label": "Non-profit organization"
        }
      ],
      "required": true
    },
    {
      "id": "q3_company_size",
      "label": "How big is your team?",
      "type": "single-select",
      "options": [
        {
          "value": "MICRO_0_9",
          "label": "Just me or small team (1-9 people)"
        },
        {
          "value": "SMALL_10_49",
          "label": "Small company (10-49 people)"
        },
        {
          "value": "MEDIUM_50_249",
          "label": "Medium company (50-249 people)"
        },
        {
          "value": "LARGE_250_PLUS",
          "label": "Large company (250+ people)"
        }
      ],
      "required": true
    },
    {
      "id": "q4_theme",
      "label": "What does your business do?",
      "type": "multi-select",
      "options": [
        {
          "value": "INNOVATION_DIGITAL",
          "label": "Innovation, Technology, or Digital Solutions"
        },
        {
          "value": "SUSTAINABILITY",
          "label": "Sustainability, Climate, or Environmental Solutions"
        },
        {
          "value": "HEALTH_LIFE_SCIENCE",
          "label": "Health, Life Sciences, or Medical Technology"
        },
        {
          "value": "SPACE_DOWNSTREAM",
          "label": "Space Technology or Earth Observation"
        },
        {
          "value": "INDUSTRY_MANUFACTURING",
          "label": "Industry or Manufacturing"
        },
        {
          "value": "OTHER",
          "label": "Other"
        }
      ],
      "required": true
    },
    {
      "id": "q5_maturity_trl",
      "label": "How ready is your product or service?",
      "type": "single-select",
      "options": [
        {
          "value": "TRL_1_2",
          "label": "Just an idea or early research"
        },
        {
          "value": "TRL_3_4",
          "label": "Testing the concept"
        },
        {
          "value": "TRL_5_6",
          "label": "Building a prototype"
        },
        {
          "value": "TRL_7_8",
          "label": "Ready to launch or already launched"
        },
        {
          "value": "TRL_9",
          "label": "Scaling and growing"
        }
      ],
      "required": true
    },
    {
      "id": "q6_rnd_in_at",
      "label": "Will you do research or development work in Austria?",
      "type": "single-select",
      "options": [
        {
          "value": "YES",
          "label": "Yes"
        },
        {
          "value": "NO",
          "label": "No"
        },
        {
          "value": "UNSURE",
          "label": "Maybe or not sure"
        }
      ],
      "required": true
    },
    {
      "id": "q7_collaboration",
      "label": "Do you work with universities or other companies?",
      "type": "single-select",
      "options": [
        {
          "value": "NONE",
          "label": "No, we work alone"
        },
        {
          "value": "WITH_RESEARCH",
          "label": "Yes, with universities or research institutes"
        },
        {
          "value": "WITH_COMPANY",
          "label": "Yes, with other companies"
        },
        {
          "value": "WITH_BOTH",
          "label": "Yes, with both universities and companies"
        }
      ],
      "required": true
    },
    {
      "id": "q8_funding_types",
      "label": "What type of funding are you looking for?",
      "type": "multi-select",
      "options": [
        {
          "value": "GRANT",
          "label": "Grants (money you don't pay back)"
        },
        {
          "value": "LOAN",
          "label": "Loans (money you pay back)"
        },
        {
          "value": "GUARANTEE",
          "label": "Guarantees (help getting loans)"
        },
        {
          "value": "EQUITY",
          "label": "Investment (investors get shares)"
        }
      ],
      "required": true
    },
    {
      "id": "q9_team_diversity",
      "label": "Is your team diverse?",
      "type": "single-select",
      "options": [
        {
          "value": "YES",
          "label": "Yes, women own at least 25% of the business"
        },
        {
          "value": "NO",
          "label": "No, mostly men"
        },
        {
          "value": "UNKNOWN",
          "label": "Not sure or still working on it"
        }
      ],
      "required": true
    },
    {
      "id": "q10_env_benefit",
      "label": "Does your business help the environment?",
      "type": "single-select",
      "options": [
        {
          "value": "STRONG",
          "label": "Yes, it's central to what we do"
        },
        {
          "value": "SOME",
          "label": "Somewhat or as a side benefit"
        },
        {
          "value": "NONE",
          "label": "No, not really"
        }
      ],
      "required": true
    }
  ],
  "branching_rules": [
    {
      "description": "Skip loans/guarantees if user only wants grants",
      "ask_if": "not ('LOAN' in answers.q8_funding_types or 'GUARANTEE' in answers.q8_funding_types)",
      "effect": "hide_products_with_types=['loan','guarantee']"
    },
    {
      "description": "Show Austrian national programmes only if project is in Austria",
      "ask_if": "answers.q1_country == 'AT' or (answers.q1_country == 'EU')",
      "effect": "show_at_national=true"
    },
    {
      "description": "Health & Life Science specialised programmes",
      "ask_if": "'HEALTH_LIFE_SCIENCE' in answers.q4_theme",
      "effect": "boost_tags=['health','life_science']"
    },
    {
      "description": "Sustainability/Climate specialised programmes",
      "ask_if": "'SUSTAINABILITY' in answers.q4_theme or answers.q10_env_benefit in ['STRONG','SOME']",
      "effect": "boost_tags=['sustainability','climate','energy','environment']"
    },
    {
      "description": "Space downstream specialised programmes",
      "ask_if": "'SPACE_DOWNSTREAM' in answers.q4_theme",
      "effect": "boost_tags=['space','gnss','eo']"
    }
  ]
}