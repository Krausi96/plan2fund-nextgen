      "required": false,
      "hard": false,
      "options": [
        { "value": "0", "label": "€0 (Pre-revenue)" },
        { "value": "1-50k", "label": "€1K - €50K" },
        { "value": "50k-250k", "label": "€50K - €250K" },
        { "value": "250k-1m", "label": "€250K - €1M" },
        { "value": "1m-5m", "label": "€1M - €5M" },
        { "value": "5m+", "label": "€5M+" }
      ],
